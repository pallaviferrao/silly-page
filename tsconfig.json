{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": false,
      "outDir": "./build/",
      "esModuleInterop": true,
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5"
    },
    "include": [
      "src/*","./src/index.d.ts", "src/types"
    ],
    "exclude": ["node_modules", "src/**/*.spec.ts"]
  }